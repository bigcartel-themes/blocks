{
  "name": "Blocks",
  "version": "1.1.1",
  "images": [
    {
      "variable": "image",
      "label": "Logo",
      "description": "Good for a logo up to 255 x 110 pixels"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image"
    }
  ],
  "fonts": [
    {
      "variable": "font",
      "label": "Font",
      "default": "Helvetica"
    }
  ],
  "colors": [
    {
      "variable": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "variable": "blocks_background",
      "label": "Blocks background",
      "default": "#eeeeee"
    },
    {
      "variable": "blocks_links",
      "label": "Blocks links",
      "default": "#666666"
    },
    {
      "variable": "main_block_background",
      "label": "Main block background",
      "default": "#333333"
    },
    {
      "variable": "main_block_titles",
      "label": "Main block titles",
      "default": "#ffffff"
    },
    {
      "variable": "main_block_text",
      "label": "Main block text",
      "default": "#999999"
    },
    {
      "variable": "main_block_links",
      "label": "Main block links",
      "default": "#cccccc"
    },
    {
      "variable": "main_block_lines",
      "label": "Main block lines",
      "default": "#4b4b4b"
    },
    {
      "variable": "inner_blocks",
      "label": "Inner blocks",
      "default": "#222222"
    },
    {
      "variable": "footer_titles",
      "label": "Footer titles",
      "default": "#666666"
    },
    {
      "variable": "link_rollovers",
      "label": "Link rollovers",
      "default": "#00b8ed"
    }
  ],
  "options": [
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "1..100",
      "default": 17,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": false,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows the product search area"
    },
    {
      "variable": "show_newest",
      "label": "Show newest products",
      "type": "boolean",
      "default": false,
      "description": "Shows a few of your newest products"
    },
    {
      "variable": "show_top_selling",
      "label": "Show top selling products",
      "type": "boolean",
      "default": false,
      "description": "Shows a few of your top selling products"
    },
    {
      "variable": "show_products_feed",
      "label": "Show Product RSS feed",
      "type": "boolean",
      "default": false,
      "description": "Shows a link to your product RSS feed"
    }
  ],
  "checkout": {
    "optimize_legibility": "",
    "antialias_text": "",
    "logo": "{{ image }}",
    "background_image": "{{ background_image }}",
    "background_color": "{{ background }}",
    "body_font_size": "11px",
    "body_font": "{{ font }}",
    "title_background_color": "transparent",
    "title_color": "{{ blocks_links }}",
    "title_font_size": "15px",
    "title_font": "{{ font }}",
    "title_position": "center",
    "title_vertical_padding": "24px",
    "title_font_weight": "700",
    "button_background_color": "#f5f5f5",
    "button_border_color": "#444444",
    "button_border_radius": "30px",
    "button_border_width": "3px",
    "button_color": "#808080",
    "button_font_size": "11px",
    "button_font_weight": "700",
    "button_height": "26px",
    "button_hover_background_color": "#f5f5f5",
    "button_hover_border_color": "#555555",
    "button_hover_color": "#666666",
    "button_position": "center",
    "button_text_transform": "normal",
    "content_background_color": "{{ main_block_background }}",
    "content_border_color": "transparent",
    "content_border_radius": "0",
    "content_border_width": "0",
    "content_color": "{{ main_block_text }}",
    "content_header_background_color": "{{ main_block_background }}",
    "content_header_color": "{{ main_block_titles }}",
    "content_header_font_size": "12px",
    "content_header_height": "80px",
    "content_header_vertical_padding": "25px",
    "content_horizontal_padding": "100px",
    "content_width": "664px",
    "custom_inputs": true,
    "error_background_color": "{{ link_rollovers }}",
    "error_border_color": "{{ background }}",
    "error_border_radius": "4px",
    "error_border_width": "0",
    "error_color": "{{ background }}",
    "error_font_size": "13px",
    "gutter_width": "25px",
    "input_background_color": "#ffffff",
    "input_border_color": "#eeeeee",
    "input_border_radius": "0",
    "input_border_width": "1px",
    "input_color": "#000000",
    "input_error_background_color": "#ffffff",
    "input_error_border_color": "{{ link_rollovers }}",
    "input_error_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#eeeeee",
    "input_focus_color": "#000000",
    "input_font_size": "11px",
    "input_height": "30px",
    "input_horizontal_padding": "8px",
    "in_field_labels": true,
    "label_color": "#000000",
    "label_font_size": "12px",
    "label_font_weight": "normal",
    "label_text_transform": "normal",
    "link_color": "{{ main_block_links }}",
    "link_font_size": "11px",
    "link_hover_color": "{{ link_rollovers }}",
    "step_background_color": "{{ main_block_background }}",
    "step_border_color": "{{ background }}",
    "step_border_style": "solid",
    "step_border_width": "6px",
    "step_header_color": "{{ main_block_titles }}",
    "step_header_font_size": "17px",
    "step_header_font_weight": "700",
    "step_header_font": "{{ font }}",
    "step_header_position": "center",
    "step_header_text_transform": "normal",
    "step_inactive_background_color": "{{ blocks_background }}",
    "step_inactive_border_color": "{{ background }}",
    "step_inactive_header_color": "opacify({{ footer_titles }}, .1)",
    "step_vertical_padding": "25px",
    "summary_color": "{{ main_block_text }}",
    "summary_font_size": "13px",
    "summary_inactive_color": "opacify({{ footer_titles }}, .1)",
    "summary_inactive_item_border_color": "opacify({{ footer_titles }}, .1)",
    "summary_inactive_item_list_border_color": "opacify({{ footer_titles }}, .1)",
    "summary_inactive_secondary_color": "opacify({{ footer_titles }}, .1)",
    "summary_item_border_color": "{{ main_block_text }}",
    "summary_item_border_width": "1px",
    "summary_item_list_border_color": "{{ main_block_text }}",
    "summary_item_list_border_width": "2px",
    "summary_secondary_color": "{{ background }}",
    "summary_submit_background_color": "{{ blocks_background }}",
    "summary_submit_border_color": "{{ background }}",
    "summary_submit_border_width": "6px"
  }
}
